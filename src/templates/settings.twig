{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("marbles\\teamleader\\assetbundles\\Teamleader\\TeamleaderAsset") %}

{{ forms.textField({
    label: 'Client Id',
    instructions: 'Put your teamleader client id here.',
    id: 'clientId',
    name: 'clientId',
    value: settings['clientId']})
}}

{{ forms.textField({
    label: 'Client Secret',
    instructions: 'Put your teamleader client secret here.',
    id: 'clientSecret',
    name: 'clientSecret',
    value: settings['clientSecret']})
}}

{{ forms.textField({
    label: 'Base Url',
    instructions: 'Put your sites base url here. (http://example.com)',
    id: 'baseUrl',
    name: 'baseUrl',
    value: settings['baseUrl']})
}}

{{ forms.textField({
    label: 'Department Id',
    instructions: 'Insert the department id from teamleader where the invoices should be registered',
    id: 'departmentId',
    name: 'departmentId',
    value: settings['departmentId']})
}}


{{ forms.textField({
    label: 'Tax Rate Id',
    instructions: 'Insert the tax rate id you want to apply to your invoices',
    id: 'taxRateId',
    name: 'taxRateId',
    value: settings['taxRateId']})
}}
