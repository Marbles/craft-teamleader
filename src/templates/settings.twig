{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("marbles\\teamleader\\assetbundles\\teamleader\\TeamleaderAsset") %}

{{ forms.textField({
    label: 'Client Id',
    instructions: 'Put your teamleader client id here.',
    id: 'clientId',
    name: 'clientId',
    value: settings['clientId']})
}}

{{ forms.textField({
    label: 'Client Secret',
    instructions: 'Put your teamleader client secret here.',
    id: 'clientSecret',
    name: 'clientSecret',
    value: settings['clientSecret']})
}}

{{ forms.textField({
    label: 'Redirect Uri',
    instructions: 'Put your teamleader redirect uri here.',
    id: 'redirectUri',
    name: 'redirectUri',
    value: settings['redirectUri']})
}}
